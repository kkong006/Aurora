<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.hacktech2016.aurora.selectLogin">
    <Button
        android:id="@+id/client_login_bt"
        android:layout_marginTop="75dp"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@color/grey"
        android:text="@string/client_login"
        android:textSize="36sp"/>
    <Button
        android:id="@+id/realtor_login_bt"
        android:layout_below="@id/client_login_bt"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@color/grey"
        android:text="@string/realtor_login"
        android:textSize="36sp"/>

</RelativeLayout>
